{
    "collection": "@nestjs/schematics",
    "sourceRoot": "src",
    "compilerOptions": {
      "deleteOutDir": true,
      "webpack": true,
      "tsConfigPath": "tsconfig.json",
      "assets": [
        {
          "include": "views/**/*",
          "outDir": "dist"
        },
        {
          "include": "public/**/*",
          "outDir": "dist"
        }
      ],
      "watchAssets": true
    }
  }
  