<section class="country-hero-section">
    <img src="<%= category.image || '/img/default-hero.jpg' %>" alt="<%= category.name %>" class="hero-image">
    <div class="hero-overlay">
        <div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
            <div class="p-3" style="max-width: 900px;">
                <h4 class="display-4 text-white mb-md-4">Best <%= category.name %> Safaris </h4>
            </div>
        </div>
    </div>
</section>
<section class="container description-section py-5">
    <div class="row">
        <div class="col-lg-8 mb-5 mb-lg-0">
            <h2 class="text-primary mb-4"><%= category.name %> - Safaris & Tours</h2>
            
            <%- category.description %>
            
        </div>
        
        <div class="col-lg-4">
            <div class="inquiry-form sticky-form">
                <button class="btn-book-now btn-block py-3">Book Now</button> 
            </div>
        </div>
    </div>
</section>
<section id="packages" class="container py-3">
    <div class="text-center mb-5">
        <h6 class="text-primary font-weight-bold text-uppercase" style="letter-spacing: 5px; font-size: 28px;">Packages</h6>
        <p class="font-italic font-weight-bold" style="font-size: 24px;">Our <%= category.name %> Safari Packages</p>
    </div>
    
    <div class="row">
        <% if (typeof tours !== 'undefined' && tours.length > 0) { %>
            <% tours.forEach(tour => { %>
                <div class="col-lg-3 col-md-6 mb-4">
                    <div class="package-item bg-white mb-2">
                        <div class="package-image">
                            <img class="img-fluid" src="<%= tour.coverImage || '/img/default-tour.jpg' %>" alt="<%= tour.title %>">
                        </div>
                        <div class="p-4">
                            <div class="d-flex justify-content-between mb-3">
                                <small class="m-0"> <span class="font-weight-bold">Duration:</span> <i class="ri-time-line text-primary"></i> <%= tour.days %> days & <%= tour.days -1 %> Nights</small>
                            </div>
                            <a class="h5 text-decoration-none font-weight-bold" href="/tours/<%= tour.slug %>"><%= tour.title %></a>
                            <p><%= tour.summary %></p>
                        </div>
                        <div class="border-top d-flex justify-content-between align-items-center">
                            <div class="rating">
                                <span class="stars">
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star-half-alt"></i>
                                </span>
                            </div>
                            <a href="/tours/<%= tour.slug %>" class="btn font-weight-bold text-white book-btn">Book Now</a>
                        </div>
                    </div>
                </div>
            <% }); %>
        <% } else { %>
            <div class="col-12 text-center">
                <p>No tours found for <%= category.name %> yet. Check back soon!</p>
            </div>
        <% } %>
    </div>
</section>