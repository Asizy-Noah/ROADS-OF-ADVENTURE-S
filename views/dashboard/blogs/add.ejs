<div class="dashboard-content">
    <form id="addBlogForm" class="blog-form" action="/blogs/dashboard/add" method="POST" enctype="multipart/form-data">
        <div class="form-section">
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="blogTitle">Title</label>
                    <input type="text" id="blogTitle" name="title" class="form-control" required
                           value="<%= typeof oldInput !== 'undefined' ? oldInput.title || '' : '' %>">
                </div>

                <div class="form-group col-md-6">
                    <label for="blogStatus">Status</label>
                    <select id="blogStatus" name="status" class="form-control" required>
                        <option value="visible" <%= typeof oldInput !== 'undefined' && oldInput.status === 'visible' ? 'selected' : '' %>>Visible Post</option>
                        <option value="hidden" <%= typeof oldInput !== 'undefined' && oldInput.status === 'hidden' ? 'selected' : '' %>>Hidden Post</option>
                    </select>
                </div>
            </div>

            <div class="form-group">
                <label for="blogCategories">Categories</label>
                <select id="blogCategories" name="topic" class="form-control" required>
                    <option value="">Select Categories</option>
                    <option value="Wildlife Safaris" <%= (typeof oldInput !== 'undefined' && oldInput.categories && oldInput.categories.includes('Wildlife Safaris')) ? 'selected' : '' %>>Wildlife Safaris</option>
                    <option value="Mountain Gorilla Trekking" <%= (typeof oldInput !== 'undefined' && oldInput.categories && oldInput.categories.includes('Mountain Gorilla Trekking')) ? 'selected' : '' %>>Mountain Gorilla Trekking</option>
                    <option value="Cultural Tours" <%= (typeof oldInput !== 'undefined' && oldInput.categories && oldInput.categories.includes('Cultural Tours')) ? 'selected' : '' %>>Cultural Tours</option>
                    <option value="Bird Watching" <%= (typeof oldInput !== 'undefined' && oldInput.categories && oldInput.categories.includes('Bird Watching')) ? 'selected' : '' %>>Bird Watching</option>
                    <option value="Adventure Sports" <%= (typeof oldInput !== 'undefined' && oldInput.categories && oldInput.categories.includes('Adventure Sports')) ? 'selected' : '' %>>Adventure Sports</option>
                    <option value="Beach Holidays" <%= (typeof oldInput !== 'undefined' && oldInput.categories && oldInput.categories.includes('Beach Holidays')) ? 'selected' : '' %>>Beach Holidays</option>
                    <option value="City Breaks" <%= (typeof oldInput !== 'undefined' && oldInput.categories && oldInput.categories.includes('City Breaks')) ? 'selected' : '' %>>City Breaks</option>
                    <option value="Eco-Tourism" <%= (typeof oldInput !== 'undefined' && oldInput.categories && oldInput.categories.includes('Eco-Tourism')) ? 'selected' : '' %>>Eco-Tourism</option>
                    <option value="Photography Safaris" <%= (typeof oldInput !== 'undefined' && oldInput.categories && oldInput.categories.includes('Photography Safaris')) ? 'selected' : '' %>>Photography Safaris</option>
                    <option value="Luxury Travel" <%= (typeof oldInput !== 'undefined' && oldInput.categories && oldInput.categories.includes('Luxury Travel')) ? 'selected' : '' %>>Luxury Travel</option>
                    <option value="Budget Travel" <%= (typeof oldInput !== 'undefined' && oldInput.categories && oldInput.categories.includes('Budget Travel')) ? 'selected' : '' %>>Budget Travel</option>
                    <option value="Travel Tips" <%= (typeof oldInput !== 'undefined' && oldInput.categories && oldInput.categories.includes('Travel Tips')) ? 'selected' : '' %>>Travel Tips</option>
                    <option value="Conservation" <%= (typeof oldInput !== 'undefined' && oldInput.categories && oldInput.categories.includes('Conservation')) ? 'selected' : '' %>>Conservation</option>
                    <option value="Local Cuisine" <%= (typeof oldInput !== 'undefined' && oldInput.categories && oldInput.categories.includes('Local Cuisine')) ? 'selected' : '' %>>Local Cuisine</option>
                    <option value="Historical Sites" <%= (typeof oldInput !== 'undefined' && oldInput.categories && oldInput.categories.includes('Historical Sites')) ? 'selected' : '' %>>Historical Sites</option>
                </select>
                <small class="form-text text-muted">Hold Ctrl/Cmd to select multiple categories.</small>
            </div>

            <div class="form-group">
                <label for="blogContent">Content</label>
                <div id="blogContentEditor" class="editor-container blog-editor" style="height: 400px; border: 1px solid #ced4da; border-radius: 0.25rem;">
                    <%= typeof oldInput !== 'undefined' ? oldInput.content || '' : '' %>
                </div>
                <input type="hidden" name="content" id="blogContent"
                       value="<%= typeof oldInput !== 'undefined' ? oldInput.content || '' : '' %>" required>
            </div>

            <div class="form-group">
                <label for="featuredImage">Featured Image</label>
                <div class="file-upload-container">
                    <input type="file" id="featuredImage" name="coverImage" class="file-input" accept="image/*">
                    <div class="file-upload-box">
                        <i class="fas fa-cloud-upload-alt"></i>
                        <span>Drag & drop image or click to browse</span>
                    </div>
                    <div class="file-preview" id="imagePreview">
                        <% if (typeof oldInput !== 'undefined' && oldInput.coverImage) { %>
                            <img src="/uploads/<%= oldInput.coverImage %>" alt="Current Featured Image" style="max-width: 100%; height: auto; display: block; margin-top: 10px;">
                        <% } %>
                    </div>
                </div>
            </div>
        </div>

        <div class="form-section">
            <h3 class="section-title">SEO Information</h3>
            <div class="form-group">
                <label for="seoTitle">Meta Title</label>
                <input type="text" id="seoTitle" name="seoTitle" class="form-control"
                       value="<%= typeof oldInput !== 'undefined' ? oldInput.seoTitle || '' : '' %>">
                <small class="form-text text-muted">Recommended length: 50-60 characters (for browser tabs and search results).</small>
            </div>
            <div class="form-group">
                <label for="seoDescription">Meta Description</label>
                <textarea id="seoDescription" name="seoDescription" class="form-control" rows="3"><%= typeof oldInput !== 'undefined' ? oldInput.seoDescription || '' : '' %></textarea>
                <small class="form-text text-muted">Recommended length: 150-160 characters (for search result snippets).</small>
            </div>
            <div class="form-group">
                <label for="seoKeywords">Meta Keywords</label>
                <input type="text" id="seoKeywords" name="seoKeywords" class="form-control"
                       value="<%= typeof oldInput !== 'undefined' ? oldInput.seoKeywords || '' : '' %>">
                <small class="form-text text-muted">Separate keywords with commas (e.g., "Uganda safaris, gorilla trekking Uganda").</small>
            </div>
            <div class="form-group">
                <label for="seoCanonicalUrl">Canonical URL</label>
                <input type="url" id="seoCanonicalUrl" name="seoCanonicalUrl" class="form-control"
                       value="<%= typeof oldInput !== 'undefined' ? oldInput.seoCanonicalUrl || '' : '' %>">
                <small class="form-text text-muted">The preferred URL for this content to prevent duplicate content issues.</small>
            </div>
            <div class="form-group">
                <label for="seoOgImage">Open Graph Image URL</label>
                <input type="url" id="seoOgImage" name="seoOgImage" class="form-control"
                       value="<%= typeof oldInput !== 'undefined' ? oldInput.seoOgImage || '' : '' %>">
                <small class="form-text text-muted">Image for social media sharing (e.g., Facebook, Twitter). Full URL required.</small>
            </div>
        </div>

        <div class="form-actions">
            <button type="button" class="btn btn-secondary" onclick="window.location.href='/blogs/dashboard'">Cancel</button>
            <button type="submit" class="btn btn-primary">Publish Update</button>
        </div>
    </form>
</div>

<script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // --- Quill.js Editor Initialization ---
        var quill = new Quill('#blogContentEditor', {
            theme: 'snow',
            placeholder: 'Write your blog content here...',
            modules: {
                toolbar: [
                    [{ 'header': [1, 2, 3, 4, 5, 6, false] }],
                    ['bold', 'italic', 'underline', 'strike'],
                    ['blockquote', 'code-block'],
                    [{ 'list': 'ordered'}, { 'list': 'bullet' }],
                    [{ 'script': 'sub'}, { 'script': 'super' }],
                    [{ 'indent': '-1'}, { 'indent': '+1'}],
                    [{ 'direction': 'rtl' }],
                    [{ 'color': [] }, { 'background': [] }],
                    [{ 'font': [] }],
                    [{ 'align': [] }],
                    ['link', 'image', 'video'],
                    ['clean']
                ]
            }
        });

        var hiddenContentInput = document.getElementById('blogContent');
        var initialContent = hiddenContentInput.value;
        if (initialContent) {
            quill.clipboard.dangerouslyPasteHTML(initialContent);
        }

        var addBlogForm = document.getElementById('addBlogForm');
        addBlogForm.addEventListener('submit', function(event) { // Add event parameter
            var editorContent = quill.root.innerHTML;
            if (editorContent === '<p><br></p>' || editorContent.trim() === '') {
                hiddenContentInput.value = '';
            } else {
                hiddenContentInput.value = editorContent;
            }

            if (hiddenContentInput.value === '' && hiddenContentInput.required) {
                alert('Blog content is required!');
                event.preventDefault(); // Stop form submission
                return false;
            }
        });

        // --- Featured Image Preview ---
        var featuredImageInput = document.getElementById('featuredImage');
        var imagePreviewContainer = document.getElementById('imagePreview');
        var fileUploadBox = document.querySelector('.file-upload-box'); // The "Drag & drop" box

        featuredImageInput.addEventListener('change', function(event) {
            imagePreviewContainer.innerHTML = ''; // Clear previous preview
            fileUploadBox.style.display = 'none'; // Hide the drag & drop box

            var file = event.target.files[0];

            if (file) {
                if (file.type.startsWith('image/')) {
                    var reader = new FileReader();
                    reader.onload = function(e) {
                        var img = document.createElement('img');
                        img.src = e.target.result;
                        img.style.maxWidth = '100%';
                        img.style.height = 'auto';
                        img.style.display = 'block';
                        img.style.marginTop = '10px';
                        imagePreviewContainer.appendChild(img);
                    };
                    reader.readAsDataURL(file);
                } else {
                    // Not an image file, perhaps show an error or reset
                    alert('Please select an image file for the featured image.');
                    featuredImageInput.value = ''; // Clear the input
                    fileUploadBox.style.display = 'flex'; // Show drag & drop box again
                }
            } else {
                // No file selected, show the drag & drop box if no existing image
                var existingImage = imagePreviewContainer.querySelector('img');
                if (!existingImage) { // Only show if no previous image is there (for edit forms)
                    fileUploadBox.style.display = 'flex';
                }
            }
        });

        // Optional: Handle clearing input if user wants to remove selected image
        // You might need a clear button or similar logic depending on UX
    });
</script>